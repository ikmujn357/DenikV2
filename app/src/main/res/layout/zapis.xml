<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pozadí">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingTop="8dp"
            android:paddingRight="14dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/window_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:baselineAligned="true">

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"/>

        </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/window_shape"
                android:gravity="center"
                android:orientation="horizontal"
                android:baselineAligned="true">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Jméno cesty:"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginEnd="16dp"/>

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/EnterRouteName" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/window_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:baselineAligned="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:baselineAligned="true">

                    <TextView
                        android:id="@+id/styleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center"
                        android:text="Styl přelezu:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp" />

                    <Spinner
                        android:id="@+id/styleSpinner"
                        android:layout_width="180dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/falls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:baselineAligned="true">

                    <TextView
                        android:id="@+id/fallsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Počet pádů:"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginEnd="28dp"/>

                    <EditText
                        android:id="@+id/fallEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:hint="Zadejte počet pádů"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/window_shape"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:baselineAligned="true">

            <TextView
                android:id="@+id/difficultyText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="Obtížnost:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginEnd="28dp"/>

                <Spinner
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/difficultySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical" />

            <LinearLayout
                android:id="@+id/topPanel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_selection_background"
                    android:src="@drawable/plus"
                    android:contentDescription="@string/plus"/>

                <View
                    android:layout_width="7dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/button_nula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_selection_background"
                    android:src="@drawable/nothing"
                    android:contentDescription="@string/Empty"/>

                <View
                    android:layout_width="7dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/button_minus"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_selection_background"
                    android:src="@drawable/minus"
                    android:contentDescription="@string/minus"/>

            </LinearLayout>
        </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/window_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:baselineAligned="true">

            <TextView
                android:id="@+id/characterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Charakter cesty:"
                android:textStyle="bold"
                android:layout_marginEnd="14dp"
                android:textColor="#000000"/>

            <LinearLayout
                android:id="@+id/topPanel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <ImageButton
                        android:id="@+id/button_sila"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_selection_background"
                        android:src="@drawable/sila"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/Strenght"/>


                    <TextView
                        android:id="@+id/text_sila"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Silová"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <ImageButton
                        android:id="@+id/button_technika"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_selection_background"
                        android:src="@drawable/technika"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/technique"/>

                    <TextView
                        android:id="@+id/text_technika"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Technická"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <ImageButton
                        android:id="@+id/button_kombinace"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_selection_background"
                        android:src="@drawable/kombinace"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/combination"/>

                    <TextView
                        android:id="@+id/text_Kombinace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Kombinace"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@android:color/transparent" />


            <LinearLayout
                android:id="@+id/showHideButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/window_shape"
                android:gravity="center">

                <ImageView
                    android:id="@+id/showHideButtonImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doplňující informace"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:background="@android:color/transparent" />

            <LinearLayout
                android:id="@+id/timeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/window_shape"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:baselineAligned="true">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="Čas výlezu:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginEnd="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/minutesEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:hint="Minut"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/secondsEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:hint="Sekund"
                    android:inputType="number" />


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/descriptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/window_shape"
            android:gravity="center"
            android:paddingTop="4dp"
            android:orientation="vertical"
            android:baselineAligned="true">

            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popis cesty:"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="#000000"/>


            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/edittext_border"
                android:hint="Napište popis cesty"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:maxLines="10"
                android:maxLength="200"
                android:paddingTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="top"
                android:importantForAutofill="no"/>
        </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/opinionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/window_shape"
            android:gravity="center"
            android:paddingTop="4dp"
            android:orientation="vertical"
            android:baselineAligned="true">

            <TextView
                android:id="@+id/opinionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hodnocení:"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <RatingBar
                android:id="@+id/opinionRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5"/>
        </LinearLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Uložit"
                android:drawableTop="@drawable/save"
                android:background="@android:color/transparent"
                android:layout_marginTop="32dp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
